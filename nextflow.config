params {
    //  Modules
    initModules = "modules:modules-init:modules-gs"
    smrttoolsModule = "smrttools/11.0.0"
    samtoolsModule = "samtools/1.14"
    picardModule = "picard/2.25.5"

    // Genome
    referenceGenome = "/net/grc/vol6/references/human/grc38/genome/pacbio/human_GRCh38_no_alt_analysis_set.fasta"

    // Grid Engine
    clusterProject = "dna"
    defaultClusterOptions = "-S /bin/bash -P $params.clusterProject -m as -r yes -R yes"
    
    // map_ccs_bams
    mapCCSBams.numCPUs =  5
    mapCCSBams.memory = "2G"
    
    // merge_mapped_bams
    mergeMappedBams.memory = "10G"

    // add_nm_tags
    addNMTags.numCPUs =  5
    addNMTags.memory = "2G"

    // samtools_stats
    samtoolsStats.memory = "10G"

    // picard_quality_metrics
    picardQualityMetrics.memory = "10G"

    // picard_coverage_metrics
    picardCoverageMetrics.memory = "10G"

    // User
    userId = "kola"

}

// Executor
executor.name = 'sge'
taskName = { "${task.process.tokenize(':')[-1].tokenize(' ')[0].toLowerCase()}" + "_" + "${task.index}" }
executor.jobName = "${userId}_taskName"

// Needed because github switched the default branch name to "main" from "master" and there is a hardcoded bug in nextflow
manifest.defaultBranch = 'main'
